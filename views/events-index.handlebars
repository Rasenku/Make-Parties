<!-- events-index -->
 <div class="row mt-4">
     <div class="col-lg-6 offset-lg-3">
       <h1>Reviews</h1>
       <a href="/events/new">New Event</a>

       <h1>Events</h1>
       {{#each events}}
       <div class="card mt-3">
         <h2>{{this.dataValues.title}}</h2>
         <img class="img-fluid" src="{{this.dataValues.imgUrl}}" alt="Card image cap">
         <p>{{this.dataValues.description}}</p>
         <div class="card-body">
           <h5 class="card-title">{{this.dataValues.title}}</h5>
           <p class="card-text">{{this.dataValues.desc}}</p>
           <div class="text-right">
             <a href="/events/{{this.dataValues.id}}" class="btn btn-primary">View</a>
             <a href="/events/{{this.dataValues.id}}/rsvps/new" class="btn btn-info">Rsvp</a>
           </div>
         </div>
       </div>
       {{/each}}
     </div>
 </div>
